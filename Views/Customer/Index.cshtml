@model NewMVCApplication.Entities.Customer

@{
    ViewData["Title"] = "Create Customer";
}

<h2>Create Customer</h2>

<form asp-action="Create" method="post">
    <div class="card card-border-primary">
        <div class="card-header">
            <div class="row">
                <div class="col-lg-12">
                    <h4 class="card-title">Add Customer</h4>
                </div>
            </div>
        </div>

        <div class="card-body">
            <span id="ContentBody_lblMsg"></span>


            <fieldset>
                <legend>Add Details</legend>
                <div class="row align-items-end">
                    <div class="col-md-3">
                <label for="Name">Name</label>
                <input type="text" class="form-control" id="Name" name="Name" asp-for="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

                    <div class="col-md-3">
                <label for="Email">Email</label>
                <input type="email" class="form-control" id="Email" name="Email" asp-for="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

                    <div class="col-md-3">
                <label for="PhoneNumber">Phone Number</label>
                <input type="text" class="form-control" id="PhoneNumber" name="PhoneNumber" asp-for="PhoneNumber" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

                    <div class="col-md-3">
                <label for="Address">Address</label>
                <input type="text" class="form-control" id="Address" name="Address" asp-for="Address" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            </div>

                <div class="col-md-12 text-center mt-3">
                <button type="submit" class="btn btn-success btn-border">Add</button>
                    <a href="c:\users\welcome\desktop\newmvcapplication\views\customer\index.cshtml" class="btn btn-outline-danger btn-border w-lg">Clear</a>
         </div>
            </fieldset>
        </div>
    </div>
</form>